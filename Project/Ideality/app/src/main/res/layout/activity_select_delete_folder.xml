<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteFolder">

    <ListView
        android:id="@+id/listDeleteFolderCheck"
        android:layout_width="318dp"
        android:layout_height="477dp"
        android:text="CheckBox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selectDeleteFolderTitle"
        android:layout_width="353dp"
        android:layout_height="70dp"

        android:layout_marginStart="40dp"
        android:layout_marginBottom="20dp"
        android:text="Carpetas a eliminar"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/listDeleteFolderCheck"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/searchFolderToDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="264dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="39dp"
        android:text="OK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listDeleteFolderCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>